<section class="content">
  <div class="box">
    <div class="box-header">
      <h3 class="box-title">Assessment</h3>
    </div>
    <div class="box-body">

      <p>
        <strong>Client:</strong>
        <%= @assessment.client %>
      </p>

      <p>
        <strong>User:</strong>
        <%= @assessment.user %>
      </p>

      <p>
        <strong>Assessment type:</strong>
        <%= @assessment.assessment_type %>
      </p>

      <p>
        <strong>Assessment completed:</strong>
        <%= @assessment.assessment_completed %>
      </p>

      <p>
        <strong>Assessment expired:</strong>
        <%= @assessment.assessment_expired %>
      </p>

      <p>
        <strong>Status:</strong>
        <%= @assessment.status %>
      </p>

      <% if @assessment.attachment.exists? %>
        <a href="<%= @assessment.attachment %>" target="_blank">
          Attachment
        </a>
      <% end %>

      <p>
        <strong>Notes:</strong>
        <%= @assessment.notes %>
      </p>

      <%= link_to 'Edit', edit_app_assessment_path(@assessment) %> |
      <%= link_to 'Back', app_assessments_path %>
    </div>
  </div>
</section>
