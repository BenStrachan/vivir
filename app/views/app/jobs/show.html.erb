<section class="content">
  <div class="box">
    <div class="box-header">
      <h3 class="box-title">Customers</h3>
    </div>
    <div class="box-body">

      <p>
        <strong>Client:</strong>
        <%= @job.client&.full_name %>
      </p>

      <p>
        <strong>Job type:</strong>
        <%= @job.job_type&.name %>
      </p>

      <p>
        <strong>Status:</strong>
        <%= @job.status %>
      </p>

      <p>
        <strong>Visit number:</strong>
        <%= @job.visit_number %>
      </p>

      <p>
        <strong>Weekly visit total:</strong>
        <%= @job.weekly_visit_total %>
      </p>

      <p>
        <strong>User:</strong>
        <%= @job.user&.full_name %>
      </p>

      <p>
        <strong>Completed date:</strong>
        <%= @job.completed_date %>
      </p>

      <p>
        <strong>Notes:</strong>
        <%= @job.notes %>
      </p>

      <%= link_to 'Edit', edit_admin_job_path(@job) %> |
      <%= link_to 'Back', admin_jobs_path %>
    </div>
  </div>
</section>
