<header class="main-header">
    <!-- Logo -->
    <a href="/" class="logo">
      <!-- mini logo for sidebar mini 50x50 pixels -->
      <span class="logo-mini">VIR</span>
      <!-- logo for regular state and mobile devices -->
      <span class="logo-lg">VIVIR</span>
    </a>
    <!-- Header Navbar: style can be found in header.less -->
    <nav class="navbar navbar-static-top">
      <!-- Sidebar toggle button-->
      <a href="#" class="sidebar-toggle" data-toggle="push-menu" role="button">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </a>

      <div class="navbar-custom-menu">
        <ul class="nav navbar-nav">
          <li class="dropdown user user-menu">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <span><img class="user-image" src="<%= current_user.avatar %>" alt=""> <%= current_user.first_name %> <%= current_user.last_name %></span>
            </a>
            <ul class="dropdown-menu">
              <li class="user-header">
                <p>
                  <%= current_user.email %>
                </p>
              </li>
              <li class="user-footer">
                <div class="pull-left">
                  <a class="btn btn-default btn-flat" href="<%= profile_app_users_path %>">Profile</a>
                </div>
                <div class="pull-right">
                  <a data-method="DELETE" href="<%= destroy_user_session_path %>" href="#" class="btn btn-default btn-flat">Sign out</a>
                </div>
              </li>
            </ul>
          </li>
        </ul>
      </div>
    </nav>
  </header>
