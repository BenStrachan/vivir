<div class="box">
  <div class="box-header">
  <h3 class="box-title">Clients</h3>
    <div class="box-tools">
      <ul class="pull-right">
        <a href="<%= new_admin_client_path %>" class="btn btn-block btn-default btn-sm">New client</a>
      </ul>
    </div>
  </div>
  <div class="box-body">
    <table class="table table-bordered">
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Date of birth</th>
      <th>Location</th>
      <th>Room</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @clients.each do |client| %>
      <tr>
        <td><%= client.first_name %></td>
        <td><%= client.last_name %></td>
        <td><%= client.date_of_birth %></td>
        <td><%= client.location %></td>
        <td><%= client.room %></td>
        <td><%= link_to 'Show', admin_client_path(client) %></td>
        <td><%= link_to 'Edit', edit_admin_client_path(client) %></td>
        <td><%= link_to 'Delete', admin_client_path(client), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
    <% end %>
  </tbody>
</table>
</div>
<div class="box-footer">
  <div class="row">
    <div class="col-sm-6">
      <%= page_entries_info @clients %>
    </div>
    <div class="col-sm-6">
      <%= paginate @clients %>
    </div>
  </div>
</div>
</div>
