<div class="modal fade" tabindex="-1" role="dialog" id="modal-completed-job">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <%= simple_form_for([:admin, @job]) do |f| %>
      <%= f.input :completed_by_id, as: :hidden, input_html: { value: current_user.id } %>
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title">Job completed</h4>
      </div>
      <div class="modal-body">
          <%= f.input :status, collection: ['Pending', 'Treated', 'Out of facility', 'Hospitalised', 'Refused when offered treatment', 'Sick', 'Facility in outbreak', 'Allied health professional sick', 'Not completed'] %>
          <%= f.input :completed_date, as: :string, input_html: {class: 'datepicker'} %>
          <%= f.input :notes, :as => :text, :input_html => {:rows => 5} %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <button class="btn btn-primary">Save</button>
      </div>
      <% end %>
    </div>
  </div>
</div>
