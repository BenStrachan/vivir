<%= simple_form_for([:admin, @customer]) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :business_name %>
    <%= f.input :phone %>
    <%= f.input :fax %>
    <%= f.input :email %>
    <%= f.input :address %>
    <%= f.input :city %>
    <%= f.input :state %>
    <%= f.input :country %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
