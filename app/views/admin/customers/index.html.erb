<div class="box">
  <div class="box-header">
  <h3 class="box-title">Customers</h3>
    <div class="box-tools">
      <ul class="pull-right">
        <a href="<%= new_admin_customer_path %>" class="btn btn-block btn-default btn-sm">New customer</a>
      </ul>
    </div>
  </div>
  <div class="box-body">
    <table class="table table-bordered">
  <thead>
    <tr>
      <th>Business name</th>
      <th>Phone</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @customers.each do |customer| %>
      <tr>
        <td><%= customer.business_name %></td>
        <td><%= customer.phone %></td>
        <td><%= customer.email %></td>
        <td><%= link_to 'Show', admin_customer_path(customer) %></td>
        <td><%= link_to 'Edit', edit_admin_customer_path(customer) %></td>
        <td><%= link_to 'Delete', admin_customer_path(customer), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
    <% end %>
  </tbody>
</table>
</div>
<div class="box-footer">
  <div class="row">
    <div class="col-sm-6">
      <%= page_entries_info @customers %>
    </div>
    <div class="col-sm-6">
      <%= paginate @customers %>
    </div>
  </div>
</div>
</div>
