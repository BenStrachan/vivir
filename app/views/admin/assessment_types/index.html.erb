<div class="box">
  <div class="box-header">
  <h3 class="box-title">Assessment types</h3>
    <div class="box-tools">
      <ul class="pull-right">
        <a href="<%= new_admin_assessment_type_path %>" class="btn btn-block btn-default btn-sm">New assessment type</a>
      </ul>
    </div>
  </div>
  <div class="box-body">
    <table class="table table-bordered">
  <thead>
    <tr>
      <th>Name</th>
      <th>Default monthly repeat</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @assessment_types.each do |assessment_type| %>
      <tr>
        <td><%= assessment_type.name %></td>
        <td><%= assessment_type.default_monthly_repeat %></td>
        <td><%= link_to 'Show', admin_assessment_type_path(assessment_type) %></td>
        <td><%= link_to 'Edit', edit_admin_assessment_type_path(assessment_type) %></td>
        <td><%= link_to 'Delete', admin_assessment_type_path(assessment_type), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<div class="box-footer">
  <div class="row">
    <div class="col-sm-6">
      <%= page_entries_info @assessment_types %>
    </div>
    <div class="col-sm-6">
      <%= paginate @assessment_types %>
    </div>
  </div>
</div>
</div>
