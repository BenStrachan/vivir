<div class="box">
  <div class="box-header">
  <h3 class="box-title">Locations</h3>
    <div class="box-tools">
      <ul class="pull-right">
        <a href="<%= new_admin_location_path %>" class="btn btn-block btn-default btn-sm">New location</a>
      </ul>
    </div>
  </div>
  <div class="box-body">
    <table class="table table-bordered">
  <thead>
    <tr>
      <th>Customer</th>
      <th>Name</th>
      <th>Phone</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @locations.each do |location| %>
      <tr>
        <td><%= location.customer %></td>
        <td><%= location.name %></td>
        <td><%= location.phone %></td>
        <td><%= link_to 'Show', admin_location_path(location) %></td>
        <td><%= link_to 'Edit', edit_admin_location_path(location) %></td>
        <td><%= link_to 'Delete', admin_location_path(location), method: :delete, data: { confirm: 'Are you sure?' } %>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<div class="box-footer">
  <div class="row">
    <div class="col-sm-6">
      <%= page_entries_info @locations %>
    </div>
    <div class="col-sm-6">
      <%= paginate @locations %>
    </div>
  </div>
</div>
</div>
