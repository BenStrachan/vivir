      <p id="notice"><%= notice %></p>

      <p>
        <strong>Customer:</strong>
        <%= @location.customer %>
      </p>

      <p>
        <strong>Name:</strong>
        <%= @location.name %>
      </p>

      <p>
        <strong>Phone:</strong>
        <%= @location.phone %>
      </p>

      <p>
        <strong>Fax:</strong>
        <%= @location.fax %>
      </p>

      <p>
        <strong>Email:</strong>
        <%= @location.email %>
