<%= simple_form_for([:admin, @location]) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.association :customer, label_method: :business_name %>
    <%= f.input :name %>
    <%= f.input :phone %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
